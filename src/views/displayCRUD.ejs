<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <style>
        table,th, td {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <table style="width: 100%;">
        <tr>
            <th>email</th>
            <!-- <th>password</th> -->
            <th>firstName</th>
            <th>lastName</th>
            <th>address</th>
            <th>phoneNumber</th>
            <th>gender</th>
            <th>roleId</th>
            <th>action</th>
        </tr>

        <% for (var i = 0; i < dataTable.length; i++) { %>
            <tr>
              <td><%= dataTable[i].email %></td>
              <!-- <td><%= dataTable[i].password %></td> -->
              <td><%= dataTable[i].firstName %></td>
              <td><%= dataTable[i].lastName %></td>
              <td><%= dataTable[i].address %></td>
              <td><%= dataTable[i].phoneNumber %></td>
              <td><%= dataTable[i].gender %></td>
              <td><%= dataTable[i].roleId %></td>
              <td>
                <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit">Edit</a>
                <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete">Delete</a>
              </td>
            </tr>    
           <% } %>
    </table>
</body>
</html>